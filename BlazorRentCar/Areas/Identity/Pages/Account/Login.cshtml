@page

@model LoginModel

@{
    ViewData["Title"] = "Inicio de sesion";
}

<div class="auth-container">
    <div class="card shadow-lg p-3 mb-3">
        <form id="account" method="post">
            <h4>Inicio de sesión</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group input-group">
                <div class="input-group-append">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                </div>
                <input asp-for="Input.UserName" placeholder="Usuario" class="form-control" />
            </div>
            <div class="form-group input-group">
                <div class="input-group-append">
                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                </div>
                <input asp-for="Input.Password" placeholder="Contraseña" class="form-control" />
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div class="text-right pr-3">
                <button type="submit" class="btn btn-info">Log in<i class="oi oi-account-login ml-2"></i></button>
            </div>
            <div class="form-group">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                </p>
            </div>
        </form>
    </div>
</div>



